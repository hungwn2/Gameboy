#pragma once

#include <utility>
#include "TextureManager.h"
#include "TileType.h"
#include "SoundManager.h"
#include "ecs/ecs.h"

struct TransformComponent:
	public Component{
    TransformComponent(int x, int y, int w, int h) : x(x), y(y), w(w), h(h) {};

    [[nodiscard]] float right() const{
    	return x+w;
    }



};
