#include "adc.h"


#define GPIOAEN (1U<<0)
#define ADC1EN (1U<<8)
#define ADC_CH1	(1U<<0)
#define ADC_SEQ_LEN_1 (0x00)
#define CR2_ADCON	(1U<<0)
#define CR2_CONT	(1U<<1)
#define CR2_SWSTART		(1U<<30)
#define SR_EOC		(1U<<1)


//One Channel ADC
void adc_init(void){
	RCC->AHB1ENR |= GPIOAEN;
	GPIOA->MODER |=(1U<<2);
	GPIOA->MODER |=(1U<<3);
	GPIOA->MODER |=(1U<<0);
	GPIOA->MODER |=(1U<<1);
	ADC1->SQR1 =ADC_SEQ_LEN_1;
	ADC1->CR2 |= CR2_ADCON;
}



uint32_t adc_read(uint8_t channel){
	ADC1->SQR3=channel;
	ADC1->CR2|=CR2_CONT;
		ADC1->CR2 |=CR2_SWSTART;
	while(!(ADC1->SR & SR_EOC)){}
	return (ADC1->DR);
}
